
<%= link_to "ユーザー一覧", users_path%>

<h1>
  商品検索
</h1>
<%= search_form_for @p, url: drinks_searchdrink_path do |f| %>
  
  <%= f.search_field :name_cont%>
  <p>カテゴリー検索</p>
  <%= f.label '地域' %>
  <%= f.collection_select :region_id_eq, Region.all ,:id, :name,  include_blank: '指定なし' %>
  <%# ベースはドリンククラスで、第二引数で%>
  <br>
  <%= f.label 'コク'%>
  <%= f.collection_select :body_id_eq,Body.all,:id,:name,include_blank: '指定なし' %>
  <br>
  <%= f.label '酸味'%>
  <%= f.collection_select :acidity_id_eq,Acidity.all,:id,:name,include_blank: '指定なし' %>
  <br>
  <%= f.label '加工法'%>
  <%= f.collection_select :processing_id_eq,Processing.all,:id,:name,include_blank: '指定なし' %>
  <%= f.submit '検索' %>
<% end %>
<div class='main'>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>タイムライン</h2>
    <ul class='item-lists'>

      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <%if @drinks%>
      <% @drinks.each do |drink|%>
      <li class='list'>
        <%= link_to drink_path(drink.id) do %>
        <div class='item-img-content'>
          <%= image_tag drink.image , class: "item-img" if drink.image.attached? %>
          
          <%# if drink.trade%>
          
   
          
          <%# end %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= drink.name %>
          </h3>
          <div class='item-price'>
            <span><%= drink.price %>円<br>(税込み)</span>
            <div class='star-btn'>
              <%# image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
          <div class='item-explain'>
            <%= drink.explain%>
          </div>
          <div class='item-tag'>
            <%drink.tags.each do |tag| %>
              #<%=tag.tag_name%>
            <%end%>
          </div>
        </div>
       
        <% end %>
      </li>
      <%end%>
    
      

    </ul>
  </div>
  <%end%>
</div>
<%= link_to "退会する", user_path(current_user),method: :delete %>
