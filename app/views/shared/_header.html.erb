
  <div class = "header",id="slideshow">

    <%= link_to root_path  do %> 
      <%= image_tag 'logo.png',class: "logo" %> 
    <% end %>

    <% if current_user%>
      <%= link_to user_path(current_user) do%>
        <%= image_tag current_user.image.variant(resize: '100x100'),class: 'user-img' if current_user.image.attached?%>
      <% end %>

    <div class="header-nav">
        <div class = "header-user-name">
          <i class="fas fa-user"></i><a class = "h-user-name"><%= link_to current_user.nickname,user_path(current_user) %></a>
        </div>
    <% end %>  


        <% if current_user  %>
          <div class="post">
            <i class="fas fa-pen-alt"></i><%= link_to "投稿する", new_drink_path %>
          </div>
          <div class="buy-form">
            <i class="fas fa-mug-hot"></i><%= link_to "商品を購入",'/buy'%>
          </div>
          <div class="searching-link">
            <i class="fas fa-search"></i><%= link_to "検索" , drinks_searchingform_path%>
          </div>

        <% end %>

    </div>
  </div>


